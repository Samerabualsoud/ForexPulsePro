# ===================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# Forex Signal Dashboard - Strict Live Mode Configuration
# ===================================================================
# Copy this file and set appropriate values for production deployment

# ===================================================================
# CORE ENVIRONMENT SETTINGS
# ===================================================================
ENVIRONMENT=production
NODE_ENV=production

# ===================================================================
# STRICT LIVE MODE CONFIGURATION (CRITICAL FOR ENVIRONMENT PARITY)
# ===================================================================
# These settings MUST be identical across dev and production
STRICT_LIVE_MODE=true
STRICT_LIVE_MAX_DATA_AGE=15.0
STRICT_LIVE_MIN_PROVIDERS=1
STRICT_LIVE_REQUIRE_LIVE_SOURCE=true

# Data Quality Requirements
STRICT_LIVE_BLOCK_SYNTHETIC=true
STRICT_LIVE_BLOCK_MOCK=true
STRICT_LIVE_BLOCK_CACHED=false
STRICT_LIVE_REQUIRE_REAL_MARKER=true

# Provider Source Management (MUST MATCH ACROSS ENVIRONMENTS)
STRICT_LIVE_APPROVED_SOURCES="Polygon.io,Finnhub,MT5,FreeCurrencyAPI,CoinGecko,Coinbase"
STRICT_LIVE_BLOCKED_SOURCES="ExchangeRate.host,AlphaVantage,MockDataProvider"

# Market Safety Requirements
STRICT_LIVE_REQUIRE_MARKET_OPEN=false
STRICT_LIVE_MIN_DATA_BARS=30

# Logging Configuration
STRICT_LIVE_VERBOSE_LOGGING=true
STRICT_LIVE_LOG_ALL_VALIDATIONS=true

# ===================================================================
# API KEYS (PRODUCTION VALUES - SECURE THESE!)
# ===================================================================
# Primary Data Providers
POLYGON_API_KEY=your_production_polygon_key_here
FINNHUB_API_KEY=your_production_finnhub_key_here
FREECURRENCY_API_KEY=your_production_freecurrency_key_here

# Secondary Data Providers
ALPHAVANTAGE_KEY=your_production_alphavantage_key_here

# AI Service Keys
OPENAI_API_KEY=your_production_openai_key_here
ANTHROPIC_API_KEY=your_production_anthropic_key_here
PERPLEXITY_API_KEY=your_production_perplexity_key_here
GOOGLE_GEMINI_API_KEY=your_production_gemini_key_here

# ===================================================================
# APPLICATION CONFIGURATION
# ===================================================================
# Backend Configuration
CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"
BACKEND_PORT=8080
BACKEND_HOST=0.0.0.0

# AI System Configuration
ENABLE_DUAL_AI=true
AI_CONSENSUS_THRESHOLD=0.4
ENABLE_MOCK_DATA=false

# Trading Configuration
AUTO_TRADE_ENABLED=false

# Database Configuration
DATABASE_URL=your_production_database_url_here

# ===================================================================
# RATE LIMITING & PERFORMANCE
# ===================================================================
# Provider Request Management
POLYGON_RATE_LIMIT_PER_MINUTE=100
FINNHUB_RATE_LIMIT_PER_MINUTE=60
ALPHAVANTAGE_RATE_LIMIT_PER_MINUTE=5

# Request Timeout Configuration
DEFAULT_PROVIDER_TIMEOUT=10
POLYGON_TIMEOUT=15
FINNHUB_TIMEOUT=10
MT5_TIMEOUT=5

# ===================================================================
# MONITORING & LOGGING
# ===================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ===================================================================
# SECURITY SETTINGS
# ===================================================================
JWT_SECRET=your_secure_jwt_secret_here
ENCRYPTION_KEY=your_secure_encryption_key_here

# ===================================================================
# DEPLOYMENT VERIFICATION
# ===================================================================
# Configuration fingerprint for environment verification
# Generate using: python -c "from backend.config.provider_validation import get_provider_validation_service; print(get_provider_validation_service().generate_configuration_fingerprint())"
EXPECTED_CONFIG_FINGERPRINT=production_fingerprint_here

# ===================================================================
# IMPORTANT NOTES:
# ===================================================================
# 1. Replace all "your_*_here" values with actual production credentials
# 2. Ensure STRICT_LIVE_MODE settings match development environment exactly
